{
    "name": "footballencarta/portfolio-backend",
    "description": "Backend for my portfolio website.",
    "license": "GPL-3.0-or-later",
    "type": "project",
    "require": {
        "php": "^7.3|^8.0",
        "bref/bref": "^1.2",
        "laravel/lumen-framework": "^8.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "ergebnis/phpstan-rules": "^0.15.3",
        "fakerphp/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/larastan": "^0.7.1",
        "phpunit/phpunit": "^9.3",
        "rregeer/phpunit-coverage-check": "^0.3.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyse": "phpstan analyse",
        "cs": "phpcs --standard=PSR12 app",
        "cs-fix": "phpcbf --standard=PSR12 app",
        "test": "vendor/bin/phpunit",
        "coverage": [
            "@test",
            "coverage-check clover.xml 95 --only-percentage"
        ],
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update"
    },
    "extra": {
        "hooks": {
            "config": {
                "stop-on-failure": ["pre-push"]
            },
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "composer analyse",
                "composer cs"
            ],
            "pre-push": [
                "composer coverage"
            ]
        }
    }
}
